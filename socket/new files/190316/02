//倒立金字塔
int main()
{
	int i, j, k,n;
	printf("请输入行数");
	scanf("%d", &n);
	for (i = 1; i <= n; i++)
	{
		for (k = 1; k <= i; k++)
			printf(" ");
		for (j = 1; j <= 2 * n - 2 * i + 1;j++)
			printf("*");

		printf("\n");
	}
	system("pause");
	return 0;
}
